{
    "name": "logistics-video-recorder",
    "version": "2.0.0",
    "description": "物流视频录制管理系统 - 支持Web端、桌面端、移动端",
    "main": "electron/main.js",
    "author": "Your Name",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/yourusername/logistics-video-recorder.git"
    },
    "scripts": {
        "start": "electron .",
        "build": "electron-builder",
        "build:win": "electron-builder --win",
        "build:mac": "electron-builder --mac",
        "build:linux": "electron-builder --linux",
        "build:all": "electron-builder -mwl",
        "pack": "electron-builder --dir",
        "postinstall": "electron-builder install-app-deps"
    },
    "build": {
        "appId": "com.logistics.video.recorder",
        "productName": "物流视频管理",
        "copyright": "Copyright © 2026",
        "directories": {
            "output": "dist"
        },
        "files": [
            "electron/**/*",
            "web/**/*",
            "web_server.py",
            "video_recorder.py",
            "video_recorder_gui.py",
            "run.py",
            "requirements*.txt",
            "config.json.example",
            "LICENSE"
        ],
        "win": {
            "target": [
                "nsis",
                "portable"
            ],
            "artifactName": "${productName}-${version}-${os}-${arch}.${ext}"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "shortcutName": "物流视频管理",
            "license": "LICENSE"
        },
        "mac": {
            "target": [
                "dmg",
                "zip"
            ],
            "category": "public.app-category.business",
            "artifactName": "${productName}-${version}-${os}-${arch}.${ext}"
        },
        "dmg": {
            "title": "${productName} ${version}"
        },
        "linux": {
            "target": [
                "AppImage",
                "deb"
            ],
            "category": "Office",
            "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
            "description": "物流退货视频录制与管理系统"
        }
    },
    "dependencies": {
        "electron-store": "^8.1.0",
        "express": "^4.18.2"
    },
    "devDependencies": {
        "electron": "^28.1.0",
        "electron-builder": "^24.9.1"
    }
}